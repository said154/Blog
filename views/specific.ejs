<html>

<head>
	<title> This Post </title>
	
</head>

<body>
<header style="position:fixed; width:100%; z-index:99;">		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<ul class="nav nav-tabs">
				
				<li class="nav-item">
					<a class="nav-link" href="/allpost">All Posts</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/newpost">New Post</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/logout">Log Out</a>
				</li>
			</ul>
		</nav>
	</header>
	
		<div style="padding-top: 15%;width:50%; margin-left:25%">
<ul class="list-group" style="padding-bottom:100px; ">
	 <li style="margin:1%;"class="list-group-item list-group-item-info">
		 <div class="d-flex w-100 justify-content-between">
       <h4 class="mb-1"><%= post.title %></h4>
       <small class="text-muted">Author: <%= post.user.username %></small>
     </div>
		 <p class="mb-1">	<%= post.content %></p>
</li>
<% for(let i = 0; i < comment.length; i++) { %>
		 <li style="margin:1%;"class="list-group-item list-group-item-secondary">
			 <div class="d-flex w-100 justify-content-between">
					<h6 class="mb-1">Comment: <br><br><%= comment[i].reply  %></h6>
					<small class="text-muted">Author: 	<%= comment[i].user.username %></small>
				</div><% } %>
</li>
</ul>

	<br><br>
	<form action='/posts/<%= post.id %>' , method='POST' , autocomplete='off'>
		<div style="margin:1%;"class="form-group">
			<label style="color:white">Reply</label>
			<input type="text" required class="form-control" name='comment' placeholder="comment">
	</div>

		<button style="margin:1%;"type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>

</html>